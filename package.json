{
    "name": "se3-launcher",
    "description": "Launcher for Space Eternity 3",
    "version": "3.0.0-beta.5",
    "private": true,
    "homepage": "./",
    "main": "src/main/index.js",
    "author": {
        "name": "Nadwey",
        "url": "https://github.com/Nadwey/",
        "email": "nadweyyy@gmail.com"
    },
    "license": "MIT",
    "devDependencies": {
        "concurrently": "^7.3.0",
        "cross-env": "^7.0.3",
        "electron": "^20.1.0",
        "electron-builder": "^23.3.3",
        "jest": "^28.1.3",
        "prettier": "2.7.1",
        "react": "^18.2.0",
        "react-app-rewired": "^2.2.1",
        "react-dom": "^18.2.0",
        "wait-on": "^6.0.1"
    },
    "repository": {
        "url": "https://github.com/Space-Eternity-3/SE3-Launcher"
    },
    "scripts": {
        "start": "concurrently --kill-others \"cross-env BROWSER=none react-app-rewired start\" \"electron .\"",
        "react-build": "react-app-rewired build",
        "windows-electron-build": "electron-builder --win --ia32 --publish=never && electron-builder --win --x64 --publish=never",
        "linux-electron-build": "electron-builder --linux --x64 --publish=never",
        "electron-build": "npm run windows-electron-build && npm run linux-electron-build",
        "debug-electron-build": "electron-builder --dir --publish=never",
        "build": "npm run react-build && npm run electron-build",
        "prettier": "prettier --write .",
        "test": "jest --runInBand"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "dependencies": {
        "@mantine/core": "^5.2.3",
        "@mantine/modals": "^5.2.3",
        "@mantine/notifications": "^5.2.3",
        "@tabler/icons": "^1.86.0",
        "axios": "^0.27.2",
        "decompress": "^4.2.1",
        "electron-is": "github:Nadwey/electron-is",
        "electron-store": "^8.1.0",
        "electronbb": "^1.0.0-beta.3",
        "github-markdown-css": "^5.1.0",
        "lodash": "^4.17.21",
        "react-markdown": "^8.0.3",
        "remark-gfm": "^3.0.1"
    },
    "build": {
        "productName": "SE3 Launcher",
        "extends": null,
        "files": [
            "**/*",
            "!.github/",
            "!src/renderer/",
            "!resources/",
            "!public/",
            "!.prettierrc",
            "!.vscode/",
            "!.github/",
            "!.test/",
            "!README.md",
            "!config-overrides.js",
            "node_modules/",
            "build/"
        ],
        "linux": {
            "target": [
                "deb",
                "rpm",
                "tar.gz",
                "AppImage"
            ],
            "artifactName": "SE3 Launcher-${version}-${os}-${arch}.${ext}",
            "icon": "../resources/icon.png"
        },
        "win": {
            "target": [
                "nsis",
                "zip"
            ],
            "artifactName": "SE3 Launcher-${version}-${os}-${arch}.${ext}",
            "icon": "../resources/icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": false,
            "allowToChangeInstallationDirectory": true,
            "installerIcon": "resources/icon.ico",
            "deleteAppDataOnUninstall": true,
            "installerSidebar": "../resources/Sidebar.bmp",
            "differentialPackage": false
        }
    }
}
